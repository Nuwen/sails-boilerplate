extends ../layout.jade

block content
  form(novalidate ng-controller='LoginCtrl'
ng-submit='login(user)' name='loginForm')
    div(class='page-header')
      h3() Please login.
      small() "So high, so low, so many things to know."

    div(
      class='form-group container'
      )
      div(class='row')
        alert(
          class='alert alert-danger col-md-4 col-md-offset-4'
          ng-repeat='alert in alerts'
          type='{{alert.type}}'
          close='closeAlert($index)') {{alert.msg.error}}
      div(class='col-md-4 col-md-offset-4')
        label(for='email') Email
        input(
          class='form-control'
          name='email'
          id='email'
          type='email'
          ng-model='user.email'
          required)
        span(
          class='help-block'
          ng-show='loginForm.email.$touched && loginForm.email.$error.required'
          ) Email is required
        span(
          class='help-block'
          ng-show='loginForm.email.$error.email'
          ) Invalid email
      div(class='col-md-4 col-md-offset-4')
        label(for='password') Password
        input(
          class='form-control'
          name='password'
          id='password'
          type='text'
          ng-model='user.password'
          required)
        span(
          class='help-block'
          ng-show='loginForm.password.$touched && loginForm.password.$error.required'
          ) Password is required
      div(
        class='col-md-4 col-md-offset-4')
        input(
          class='btn btn-danger btn-lg btn-block'
          type='submit'
          ng-disabled="loginForm.email.$invalid || loginForm.password.$invalid || dataLoading"
          ng-click="update(user)"
          )
        img(
          ng-if="dataLoading" 
          src="data:image/gif;base64,")
append scripts
  script(src='js/login.js')